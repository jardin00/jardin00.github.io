<div class="col">
  <a href="{% if course.redirect %}{{ course.redirect }}{% else %}{{ course.url | relative_url }}{% endif %}">
    <div class="card h-100 hoverable">
      {% if course.img %}
        {%
          include figure.liquid
          loading="eager"
          path=course.img
          sizes="250px"
          alt="course thumbnail"
          class="card-img-top"
        %}
      {% endif %}
      <div class="card-body">
        <h2 class="card-title">{{ course.title }}</h2>

        <p class="card-text">
          {% if course.university %}{{ course.university }}{% endif %}
          {% if course.semester %} · {{ course.semester }}{% endif %}
          {% if course.year %} · {{ course.year }}{% endif %}
        </p>

        {% if course.description %}
          <p class="card-text">{{ course.description }}</p>
        {% endif %}

        <div class="row ml-1 mr-1 p-0">
          {% if course.github %}
            <div class="github-icon">
              <div class="icon" data-toggle="tooltip" title="Code Repository">
                <a href="{{ course.github }}"><i class="fa-brands fa-github gh-icon"></i></a>
              </div>
              {% if course.github_stars %}
                <span class="stars" data-toggle="tooltip" title="GitHub Stars">
                  <i class="fa-solid fa-star"></i>
                  <span id="{{ course.github_stars }}-stars"></span>
                </span>
              {% endif %}
            </div>
          {% endif %}
          {% if course.syllabus_url %}
            <div class="ml-2">
              <a href="{{ course.syllabus_url }}" class="btn btn-sm btn-outline-primary">Syllabus</a>
            </div>
          {% endif %}
        </div>
      </div>
    </div>
  </a>
</div>
